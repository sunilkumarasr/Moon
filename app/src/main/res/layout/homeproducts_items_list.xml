<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_4sdp"
            android:scaleType="center"
            android:src="@color/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/OfferPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="\u20b9 500"
                    android:textColor="@color/browns"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/ActulePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/poppins"
                    android:text="\u20b9 1000"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/s_product_text"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:id="@+id/quntity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_gravity="center_horizontal"
                android:text="25 Kgs"
                android:textColor="@color/grey"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lnr_edit_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_2sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_2sdp"
                    >
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bags"
                            android:layout_width="wrap_content"
                            android:minWidth="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="@dimen/_11sdp"
                            android:maxLength="3"
                            android:text="1"/>
                        <TextView
                            android:text="Bag(s)"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/poppins"
                            android:layout_gravity="bottom"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_quantity"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/_11sdp"
                            android:maxLength="4"
                            android:text="1"/>
                        <TextView
                            android:text="Quintal(s)"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/poppins"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >
                        <androidx.appcompat.widget.AppCompatEditText

                            android:layout_width="@dimen/_50sdp"
                            android:gravity="center"
                            android:maxLength="4"
                            android:inputType="numberDecimal"
                            android:layout_height="@dimen/_32sdp"/>
                        <TextView
                            android:text="Quintals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/txt_addtocart"
                    android:layout_width="match_parent"
                    android:minEms="4"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="@dimen/_3sdp"
                    android:fontFamily="@font/poppins"
                    android:text=" Add to Cart "
                    android:visibility="visible"
                    android:gravity="center"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/outofstock_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/rounded_button_red"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:visibility="gone"
                    android:padding="@dimen/_1sdp"
                    android:text="Out of Stock"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>