                android:padding="@dimen/_8sdp"
                android:maxLines="3"
                android:fontFamily="@font/poppins"
                android:drawablePadding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
