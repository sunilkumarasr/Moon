<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"

    app:cardCornerRadius="@dimen/_3sdp"
    android:background="@drawable/rounded_button_grey"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_5sdp"
        >
    <LinearLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/s_product_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_4sdp"
            android:scaleType="fitXY"
           />






        <TextView
            android:id="@+id/outofstock_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/rounded_button_red"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:fontFamily="@font/poppins"
            android:padding="@dimen/_1sdp"
            android:text="Out of Stock"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/add_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_3sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/minusimge_btn"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:background="@color/orange"
                    android:src="@drawable/ic_icon_feather_minus"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck" />

                <TextView
                    android:id="@+id/qunty_text"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/plus_image"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_18sdp"

                    android:background="@color/purple_200"
                    android:src="@drawable/ic_baseline_add_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/addtocart_btn"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/rounded_button_green"
                    android:gravity="center"
                    android:padding="@dimen/_1sdp"
                    android:text="Add"
                    android:fontFamily="@font/poppins"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/s_product_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />


            <TextView
                android:id="@+id/sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="\u20b9 125.00"
                android:textColor="@color/red"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_amc_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="AMC \u20b9 125.00"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    />
            <TextView
                android:id="@+id/offer_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:text="\u20b9 125.00"
                android:textColor="@color/black"
                android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_2sdp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_bags"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="@dimen/_10sdp"
                    android:maxLength="3" />
                <TextView
                    android:text="Bag(s)"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_quantity"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/_10sdp"
                    android:maxLength="4" />
                <TextView
                    android:text="Quintal(s)"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:visibility="gone"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.AppCompatEditText

                    android:layout_width="@dimen/_50sdp"
                    android:gravity="center"
                    android:maxLength="4"
                    android:inputType="numberDecimal"
                    android:layout_height="@dimen/_32sdp"/>
                <TextView
                    android:text="Quintals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>






        </LinearLayout>
        <TextView
            android:id="@+id/txt_addtocart"
            android:layout_width="wrap_content"
            android:minEms="4"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_3sdp"
            android:fontFamily="@font/poppins"
            android:text="Add"
            android:visibility="visible"
            android:gravity="center"
            android:paddingStart="@dimen/_3sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>